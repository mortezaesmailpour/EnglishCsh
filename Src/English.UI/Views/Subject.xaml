<UserControl x:Class="English.UI.Views.Subject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:English.UI.Views"
             xmlns:viewModels="clr-namespace:English.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:SubjectViewModel />
    </UserControl.DataContext>
    <StackPanel Width="280" >
        <Label Content="UserName1 :"/>
        <Label Content="UserName2 :"/>
        <TextBox Text="{Binding Name}"/>

        <Button Content="Login" Command="{Binding UpdateCommand}"/>
    </StackPanel>
</UserControl>
